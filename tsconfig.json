{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@interceptor/*": ["app/core/http-service/*"],
      "@directives/*": ["app/shared/directives/*"],
      "@helpers/*": ["app/shared/helpers/*"],
      "@pipes/*": ["app/shared/pipes/*"],
      "@models/*": ["app/shared/models/*"],
      "@store/*": ["app/store/*"],
      "@shared/*": ["app/shared/*"],
      "@env/*": ["environments/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
